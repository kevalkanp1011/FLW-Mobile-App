<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="visit"
            type="org.piramalswasthya.sakhi.model.AncStatus" />

        <variable
            name="clickListener"
            type="org.piramalswasthya.sakhi.adapters.AncVisitAdapter.AncVisitClickListener" />

    </data>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:text="@{@string/anc_visit_number(visit.visitNumber)}"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            tools:text="ANc VISIT 4" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="@dimen/padding_normal"
            anc_state_icon="@{visit.formState}"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimary"
            android:text="@string/kcuf"
            android:textColor="?attr/colorOnPrimary"
            android:onClick="@{()-> clickListener.onClickedVisit(visit)}"
            anc_state="@{visit.formState}"/>

    </LinearLayout>

</layout>